extends layout

block content
  div.row.align-items-center
    h1.col-5 Application
    p.col-1.text-right
      span.spinner-border.text-primary(style="display:none;")#spinner

  form(action="/apps" method="post" class='col-6 m-3' encType="multipart/form-data")#fileModal
    if errmessage
      div.alert.alert-danger= errmessage
    div(class='form-group')
      label(for="thefile") Upload file
      input(type="file" class='form-control' name='thefile')#thefile
    button(onClick='sendForm()' class='btn btn-primary') Send


  script.
      function sendForm() {
          $('#spinner').show();
          $('#fileModal').submit();
      }
