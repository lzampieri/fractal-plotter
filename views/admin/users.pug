extends layout

block content
    table(class='table table-hover')
        thead
            tr
                th(class='col') Username
                th(class='col-1') Role
                th(class='col-1') Actions
        tbody
            each users in uslist
                tr
                    td= user.username
                    td= user.role
                    td
                        if(user.role)
                        a(class='btn btn-primary' onClick='updRole(') Testo
                    td
                        a(class='btn btn-primary' href='/exercises/'+ex.short_title+'/app') App
                    td
                        a(class='btn btn-primary' href='/exercises/'+ex.short_title+'/sol') Soluzione